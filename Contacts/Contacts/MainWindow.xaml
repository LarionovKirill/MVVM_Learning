<Window x:Class="Contacts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodel="clr-namespace:Contacts.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:MainVM}"
        mc:Ignorable="d"
        Title="Contacts" Height="413" Width="549">
    <Grid Margin="0,0,2,2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <Button Content="Save" HorizontalAlignment="Left" Margin="292,338,0,0" VerticalAlignment="Top" Width="75" Height="25"
                Command="{Binding SaveCommand}" Grid.Column="1"/>
        <Button Content="Load" HorizontalAlignment="Left" Margin="443,338,0,0" VerticalAlignment="Top" Width="75" Height="25"
                Command="{Binding LoadCommand}" Grid.Column="1"/>
        <GroupBox Header="Read Contact" Height="314" Margin="292,15,10,0" VerticalAlignment="Top" Padding="0" Grid.Column="1">
            <StackPanel HorizontalAlignment="Left" Width="206" Margin="10,0,-62,6">
                <TextBlock Text="Name:" Padding="3"/>
                <TextBlock Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" FontWeight="Bold" Padding="3"/>
                <TextBlock Text="Phone Number:" Padding="3"/>
                <TextBlock Text="{Binding Number, UpdateSourceTrigger=PropertyChanged}" FontWeight="Bold" Padding="3"/>
                <TextBlock Text="Email:" Padding="3"/>
                <TextBlock Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" FontWeight="Bold" Padding="3"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Edit Contact" HorizontalAlignment="Left" Height="314" Margin="6,15,0,0" VerticalAlignment="Top" Width="224" Grid.Column="1">
            <StackPanel HorizontalAlignment="Left" Height="286" Margin="3" VerticalAlignment="Top" Width="201">
                <TextBlock Text="Name:" Padding="3"/>
                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="Phone Number:" Padding="3"/>
                <TextBox Text="{Binding Number, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="Email:" Padding="3"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>

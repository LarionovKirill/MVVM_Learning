<Window
    x:Class="Contacts.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:Contacts.Model"
    xmlns:viewmodel="clr-namespace:Contacts.ViewModel"
    xmlns:view="clr-namespace:View"
    Title="Contacts"
    MinWidth="800"
    MinHeight="450"
    d:DataContext="{d:DesignInstance Type=viewmodel:MainVM}"
    SizeToContent="WidthAndHeight"
    mc:Ignorable="d">
    <Window.Resources>
        <view:Converter x:Key="Converter"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <GroupBox
            Grid.Column="0"
            Padding="5"
            Header="Список пользователей">
            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Grid.Column="0">Find:</Label>
                <TextBox
                    Grid.Row="0"
                    Grid.ColumnSpan="3"
                    Width="Auto"
                    Margin="34 5 3 5"/>
                <ListBox
                    Grid.Row="1"
                    Grid.ColumnSpan="3"
                    Width="Auto"
                    Height="Auto"
                    Margin="3 3 0 3"
                    ItemsSource="{Binding ContactsList, UpdateSourceTrigger = PropertyChanged}"
                    SelectedItem="{Binding SelectedItem, UpdateSourceTrigger = PropertyChanged}"/>
                <Button
                    Grid.Row="2"
                    Grid.Column="0"
                    Width="75"
                    Height="25"
                    Margin="2"
                    Command="{Binding Path = AddCommand, UpdateSourceTrigger=PropertyChanged}"
                    Content="Add"/>
                <Button
                    Grid.Row="2"
                    Grid.Column="1"
                    Width="75"
                    Height="25"
                    Content="Edit"
                    IsEnabled="{Binding Path = IsEnabled, UpdateSourceTrigger=PropertyChanged}"
                    Command="{Binding Path = EditCommand, UpdateSourceTrigger=PropertyChanged}"/>
                <Button
                    Grid.Row="2"
                    Grid.Column="2"
                    Width="75"
                    Height="25"
                    Margin="2"
                    Content="Remove"
                    Command="{Binding DeleteCommand, UpdateSourceTrigger=PropertyChanged}"
                    IsEnabled="{Binding Path = IsEnabled, UpdateSourceTrigger=PropertyChanged}"/>
            </Grid>
        </GroupBox>
        <GridSplitter
            Grid.RowSpan="2"
            Grid.Column="1"
            Width="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch"
            ShowsPreview="False"/>
        <Grid Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image
                Grid.Column="0"
                Width="100"
                Height="100"
                Margin="10 27 0 0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Source="Images/photo.jpg"/>
            <StackPanel Grid.Column="1" Margin="0">
                <TextBlock Margin="3" FontSize="12">Name:</TextBlock>
                <TextBox
                    Width="Auto"
                    Margin="3"
                    Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                    IsReadOnly="{Binding Path = ReadOnly, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Margin="3" FontSize="12">Phone Number:</TextBlock>
                <TextBox
                    Width="Auto"
                    Margin="3"
                    IsReadOnly="{Binding Path = ReadOnly}"
                    Text="{Binding Number, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Margin="3" FontSize="12">Email:</TextBlock>
                <TextBox
                    Width="Auto"
                    Margin="3"
                    IsReadOnly="{Binding Path = ReadOnly, UpdateSourceTrigger=PropertyChanged}"
                    Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
                <Button
                    Width="75"
                    Height="25"
                    Margin="162 0"
                    Content="Apply"
                    Command="{Binding SaveCommand, UpdateSourceTrigger=PropertyChanged}"
                    Visibility="{Binding IsVisible, Converter={StaticResource Converter}}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

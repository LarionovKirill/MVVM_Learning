<Window
    x:Class="Contacts.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:Contacts.ViewModel"
    Title="Contacts"
    MinWidth="800"
    MinHeight="450"
    d:DataContext="{d:DesignInstance Type=viewmodel:MainVM}"
    SizeToContent="WidthAndHeight"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <GroupBox
            Grid.Column="0"
            Padding="5"
            Header="Список пользователей">
            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Grid.Column="0">Find:</Label>
                <TextBox
                    Grid.Row="0"
                    Grid.ColumnSpan="3"
                    Width="Auto"
                    Margin="34 5 3 5"/>
                <ListBox
                    Grid.Row="1"
                    Grid.ColumnSpan="3"
                    Width="Auto"
                    Height="300"
                    Margin="5 5 0 7"/>
                <Button
                    Grid.Row="2"
                    Grid.Column="0"
                    Width="75"
                    Height="25"
                    Margin="2"
                    Content="Add"/>
                <Button
                    Grid.Row="2"
                    Grid.Column="1"
                    Width="75"
                    Height="25"
                    Content="Edit"/>
                <Button
                    Grid.Row="2"
                    Grid.Column="2"
                    Width="75"
                    Height="25"
                    Margin="2"
                    Content="Remove"/>
            </Grid>
        </GroupBox>
        <GridSplitter
            Grid.RowSpan="2"
            Grid.Column="1"
            Width="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch"
            ShowsPreview="False"/>
        <Grid Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image
                Grid.Column="0"
                Width="100"
                Height="100"
                Margin="10 27 0 0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Source="Images/photo.jpg"/>
            <StackPanel Grid.Column="1" Margin="0">
                <TextBlock Margin="3" FontSize="12">Name:</TextBlock>
                <TextBox
                    Width="Auto"
                    Margin="3"
                    IsReadOnly="True"/>
                <TextBlock Margin="3" FontSize="12">Phone Number:</TextBlock>
                <TextBox
                    Width="Auto"
                    Margin="3"
                    IsReadOnly="True"/>
                <TextBlock Margin="3" FontSize="12">Email:</TextBlock>
                <TextBox
                    Width="Auto"
                    Margin="3"
                    IsReadOnly="True"/>
                <Button
                    Width="75"
                    Height="25"
                    Margin="162 0"
                    Content="Apply"
                    Visibility="Hidden"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

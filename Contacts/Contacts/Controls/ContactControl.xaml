<UserControl
    x:Class="Contacts.Controls.ContactControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Contacts.UserControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:Contacts.ViewModel"
    d:DataContext="{d:DesignInstance Type=viewmodel:MainVM}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image
            Grid.Column="0"
            Width="100"
            Height="100"
            Margin="10 27 0 0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/Images/EmptyProfile.png"/>
        <StackPanel Grid.Column="1" Margin="0">
            <TextBlock Margin="3" FontSize="12">Name:</TextBlock>
            <TextBox
                Width="Auto"
                Margin="3"
                IsReadOnly="{Binding Path=ReadOnly, UpdateSourceTrigger=PropertyChanged}"
                Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Margin="3" FontSize="12">Phone Number:</TextBlock>
            <TextBox
                Width="Auto"
                Margin="3"
                IsReadOnly="{Binding Path=ReadOnly}"
                Text="{Binding Number, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Margin="3" FontSize="12">Email:</TextBlock>
            <TextBox
                Width="Auto"
                Margin="3"
                IsReadOnly="{Binding Path=ReadOnly, UpdateSourceTrigger=PropertyChanged}"
                Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
    </Grid>
</UserControl>
